<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="400.0" prefWidth="600.0" style="-fx-background-radius: 5mm;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projekt_z_javy.Lobby">
    <children>
        <Pane layoutX="220.0" prefHeight="400.0" prefWidth="600.0" />
        <VBox prefHeight="400.0" prefWidth="220.0" style="-fx-background-color: #DDFFFF;">
            <children>
                <Pane prefHeight="85.0" prefWidth="226.0">
                    <children>
                        <Label layoutX="74.0" layoutY="25.0" text="# UMK">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                    </children>
                    <effect>
                        <Glow />
                    </effect>
                </Pane>
                <Button mnemonicParsing="false" prefHeight="44.0" prefWidth="226.0" text="Strona główna" />
                <Button fx:id="dodajButton" mnemonicParsing="false" onAction="#goToAddReservation" prefHeight="49.0" prefWidth="226.0" text="Dodaj rezerwację" />
                <Button fx:id="edytujButton" mnemonicParsing="false" onAction="#goToEditReservation" prefHeight="50.0" prefWidth="226.0" text="Edytuj rezerwację" />
                <Button fx:id="wyswietlButton" mnemonicParsing="false" onAction="#goToShowReservation" prefHeight="45.0" prefWidth="226.0" text="Wyświetl moje rezerwacje" />
                <Button fx:id="wylogujButton" mnemonicParsing="false" onAction="#userLogout" prefHeight="46.0" prefWidth="226.0" text="Wyloguj" />
            </children>
            <effect>
                <DropShadow />
            </effect>
        </VBox>
    </children>
</Pane>
